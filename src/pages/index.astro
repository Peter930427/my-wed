---
// 這裡可以放你的個人資料
const name = "Peter";
const title = "Frontend Developer / Student";
const skills = ["JavaScript", "Git", "VS Code", "Astro"];

// 這是一段你要展示的範例程式碼
const codeSnippet = `function greet() {
  console.log("Hello, world! I'm ${name}");
}`;
---

<html lang="zh-Hant">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{name} 的個人首頁</title>
    <style>
      /* 寫一點簡單的 CSS 讓它變好看 */
      body {
        font-family: "Segoe UI", system-ui, sans-serif;
        background-color: #0f172a;
        color: white;
        display: flex;
        justify-content: center;
        padding-top: 50px;
      }
      .container {
        max-width: 600px;
        width: 90%;
      }
      h1 {
        color: #38bdf8;
        font-size: 3rem;
        margin-bottom: 0.5rem;
      }
      .badge {
        background: #1e293b;
        padding: 4px 12px;
        border-radius: 15px;
        border: 1px solid #334155;
        margin-right: 5px;
        font-size: 0.9rem;
      }
      pre {
        background: #1e293b;
        padding: 1.5rem;
        border-radius: 8px;
        border-left: 4px solid #38bdf8;
        overflow-x: auto;
        color: #e2e8f0;
      }
      section {
        margin-top: 2rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>{name}</h1>
      <p style="font-size: 1.2rem; color: #94a3b8;">{title}</p>

      <section>
        {skills.map((skill) => <span class="badge">{skill}</span>)}
      </section>

      <section>
        <h3>精選程式碼</h3>
        <pre><code>{codeSnippet}</code></pre>
      </section>

      <section
        style="margin-top: 3rem; border-top: 1px solid #334155; padding-top: 1rem;"
      >
        <p>這是我用 Astro 建立的第 1 個網站！</p>
      </section>
    </div>
  </body>
</html>
